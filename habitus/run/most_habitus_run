#!/bin/bash
# run-script generated by Most Thu Nov 13 11:20:42 2014
EXP=MOST    # Name your experiment here
[ $# == 1 ] && cd $1
rm -f habitus_restart
rm -f Abort_Message
YEAR=0
YEARS=0
while [ $YEAR -lt $YEARS ]
do
   YEAR=`expr $YEAR + 1`
   DATANAME=`printf '%s.%03d' $EXP $YEAR`
   DIAGNAME=`printf '%s_DIAG.%03d' $EXP $YEAR`
   RESTNAME=`printf '%s_REST.%03d' $EXP $YEAR`
   ./habitus.x 32 32
   [ -e Abort_Message ] && exit 1
   [ -e habitus_output ] && mv habitus_output $DATANAME
   [ -e habitus_diag ] && mv habitus_diag $DIAGNAME
   [ -e habitus ] && cp habitus_status habitus_restart
   [ -e habitus ] && mv habitus_status $RESTNAME
done
